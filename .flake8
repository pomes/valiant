[flake8]
select = ANN,B,B9,BLK,C,D,DAR,E,F,I,S,W
ignore = E203,E501,W503,ANN101,ANN102,ANN204
max-line-length = 80
max-complexity = 10
application-import-names = valiant,tests
import-order-style = google
docstring-convention = google
per-file-ignores =
    tests/*:S101
    __init__.py:F401

[darglint]
strictness = short
